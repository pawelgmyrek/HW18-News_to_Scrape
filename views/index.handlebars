<div class="container">
  <div class="col-md-12 jumbotron">
    <h1> News Scraper</h1>
  </div>
</div>

<div class="col-md-12">
  {{#if article}}
  {{#each article}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>{{this.title}}</h4>
    </div>
    <div class="panel-body">
      <p> {{this.summary}}</p>
      <a href={{this.link}} target="_blank">{{this.link}}</a>
    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="panel panel-default">
    <div class="panel-body">
      <h4>No new articles.</h4>
    </div>
  </div>
  {{/if}}
</div>
